html
  head
    title Index Page
    script(src='https://code.jquery.com/jquery-3.1.1.min.js', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css')
    script(src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js')
    style.
      div{
        border: 1px solid red;
      }
  body
    .ui.pointing.secondary.menu
      a.item.active(data-tab='first') First
      a.item(data-tab='second') Second
      a.item(data-tab='third') Third
    .ui.tab.segment.active(data-tab='first')
      .ui.top.attached.tabular.menu
        a.active.item(data-tab='first/a') 1A
        a.item(data-tab='first/b') 1B
        a.item(data-tab='first/c') 1C
      .ui.bottom.attached.active.tab.segment(data-tab='first/a') 1A
      .ui.bottom.attached.tab.segment(data-tab='first/b') 1B
      .ui.bottom.attached.tab.segment(data-tab='first/c') 1C
    .ui.tab.segment(data-tab='second')
      .ui.top.attached.tabular.menu
        a.item.active(data-tab='second/a') 2A
        a.item(data-tab='second/b') 2B
        a.item(data-tab='second/c') 2C
      .ui.bottom.attached.tab.segment.active(data-tab='second/a') 2A
      .ui.bottom.attached.tab.segment(data-tab='second/b') 2B
      .ui.bottom.attached.tab.segment(data-tab='second/c') 2C
    .ui.tab.segment(data-tab='third')
      .ui.top.attached.tabular.menu
        a.item.active(data-tab='third/a') 3A
        a.item(data-tab='third/b') 3B
        a.item(data-tab='third/c') 3C
      .ui.bottom.attached.tab.segment.active(data-tab='third/a') 3A
      .ui.bottom.attached.tab.segment(data-tab='third/b') 3B
      .ui.bottom.attached.tab.segment(data-tab='third/c') 3C

