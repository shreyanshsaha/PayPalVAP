html
  head
    title Index Page
    script(src='https://code.jquery.com/jquery-3.1.1.min.js', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css')
    script(src='https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js')
  body    
    .ui.container
    .ui.raised.very.padded.text.container.segment
      h1 #{loginType}
      hr
      form.ui.form(action="", method="post")
        .ui.field.required
          label ID
          input(type="text", name="username", placeholder="ID" required)
        .ui.field.required
          label Password
          input(type="password", name="password", placeholder="Password" required)
      .ui.column
        input.ui.button.blue(type="submit", value="Submit")
        a(href="/")
          .ui.button.basic.green(tabindex=0)
            .content Home